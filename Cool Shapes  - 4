import turtle
import colorsys
t = turtle.Turtle()
turtle.Screen().bgcolor("black")
t.pensize(1)
h = 0.0
turtle.tracer(2)
for i in range(100):
         c = colorsys.hsv_to_rgb(h,1,1)
         t.pencolor(c)
         h+=0.1
         t.circle(i*2 , 100)
         t.right(90)
         for i in range(4):
                  t.right(40)
turtle.done()
